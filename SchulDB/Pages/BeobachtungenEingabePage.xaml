<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:Model="clr-namespace:Groll.Schule.Model;assembly=Model"
        xmlns:UI="clr-namespace:Groll.UserControls;assembly=UserControls"
    x:Class="Groll.Schule.SchulDB.Pages.BeobachtungenEingabePage" 
    xmlns:VM="clr-namespace:Groll.Schule.SchulDB.Pages.ViewModels"
    xmlns:loc="clr-namespace:Groll.Schule.SchulDB.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="460" d:DesignWidth="800"
	Title="" Loaded="Page_Loaded">

    <Page.Resources>
        <VM:BeobachtungenEingabeVM x:Key="ViewModel" UnitOfWork="{StaticResource UnitOfWork}" BeoText="Beobachtung" BeoDatum="12.11.2013" />

    </Page.Resources>


    <Grid x:Name="root" DataContext="{StaticResource ViewModel}" >

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="621*"/>
            <ColumnDefinition Width="179*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="32*"/>
            <RowDefinition Height="29*"/>
        </Grid.RowDefinitions>

        <GroupBox Header="Schüler auswählen" Margin="10,10,10,3.92" Grid.Row="0">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <ComboBox x:Name="cbKlassenListe" ItemsSource="{Binding KlassenListe}" SelectedItem="{Binding SelectedKlasse}" MinWidth="200"/>
                    <DatePicker loc:DatePickerWatermarkBehaviour.Watermark="Allgemein (kein Datum)"  SelectedDate="{Binding BeoDatum, Mode=TwoWay}" Style="{DynamicResource DatePickerStyle1}"     />
                    <UI:DatePickerEx loc:DatePickerWatermarkBehaviour.Watermark="Allgemein (kein Datum)"    />
                </StackPanel>
                <ComboBox x:Name="cbSchülerListe" ItemsSource="{Binding SchülerListe}" MinWidth="200" SelectedItem="{Binding SelectedSchüler}" />
            </StackPanel>

        </GroupBox>

        <GroupBox Header="Beobachtung eingeben" Margin="10,16.08,10,6.732" Grid.Row="1" Grid.ColumnSpan="2">
            <TextBox Text="{Binding BeoText}" />
        </GroupBox>
        <Button Content="Button" HorizontalAlignment="Left" Margin="337,89.268,0,0" Grid.Row="2" VerticalAlignment="Top" Width="75" Click="Button_Click_1" Height="22"/>
        <TextBox Text="{Binding BeoDatum}" HorizontalAlignment="Left" Height="23" Margin="469,53.268,0,0" Grid.Row="2" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>


    </Grid>
</Page>
