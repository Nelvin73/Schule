<DatePicker x:Name="userControl" x:Class="Groll.UserControls.DatePickerX"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:loc="clr-namespace:Groll.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Style="{DynamicResource DatePickerXStyle}"          
            Loaded="userControl_Loaded" 
            >
   
    <DatePicker.Resources>
        <ResourceDictionary Source="Resources/DatePickerXResource.xaml"  />
    </DatePicker.Resources>


    <DatePicker.CommandBindings>
        <CommandBinding Command="loc:DatePickerX.DatePickerXButton" Executed="DatePickerXButton_Executed" />
    </DatePicker.CommandBindings>
</DatePicker>
